  {
    "label": "Features",
    "name": "features",
    "type": "text",
    "occurrence": {
      "default": 4,
      "max": 50,
      "min": 1
    },
    "show_emoji_picker": true,
    "default": [
      "10 users included",
      "2 GB of storage",
      "Email support",
      "Help center access"
    ]
  },
  {
    "label": "Price",
    "name": "price",
